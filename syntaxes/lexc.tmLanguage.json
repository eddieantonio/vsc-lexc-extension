{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "lexc",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#regexps"
		},
		{
			"include": "#terms"
		},
		{
			"include": "#flagDiacritics"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lexc",
					"match": "\\b(ALPHABET|Alphabet|Sets|Rules|Multichar_Symbols|END)\\b"
				},
				{
					"name": "keyword.operator.lexc",
					"match": "[:.?*\\\\%^]"
				},
				{
					"name": "keyword.other.lexc",
					"match": "\\b(LEXICON)\\b"
				}
			]
		},
		"terms": {
			"name": "string.unquoted.lexc",
			"begin": "^",
			"end": " ",
			"patterns": [
				{
					"name": "constant.character.escape.lexc",
					"match": "%."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.lexc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lexc",
					"match": "\\\\."
				}
			]
		},
		"regexps": {
			"name": "string.quoted.regexp.lexc",
			"begin": "<",
			"end": ">",
			"patterns": [
				{
					"name": "constant.character.escape.lexc",
					"match": "%."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.exclamation-mark.lexc",
				"match": "!.*"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.lexc",
				"match": "#"
			}]
		},
		"flagDiacritics": {
			"patterns": [{
				"name": "variable.other.lexc",
				"match": "@[UCDPRNE][.]\\w+([.]\\w+)?@"
			}]
		}
	},
	"scopeName": "source.lexc"
}