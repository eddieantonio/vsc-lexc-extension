{
    "name": "lexc",
    "displayName": "lexc",
    "description": "The Xerox lexc language for defining Finite-State Transducers (FSTs)",
    "version": "1.0.5",
    "license": "mit",
    "engines": {
        "vscode": "^1.8.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eddieantonio/vscode-lexc.git"
    },
    "publisher": "eddieantonio",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lexc",
                "aliases": [
                    "lexc"
                ],
                "extensions": [
                    ".lexc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lexc",
                "scopeName": "source.lexc",
                "path": "./syntaxes/lexc.tmLanguage.json"
            }
        ]
    }
